<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE form-validation PUBLIC "-//Apache Software Foundation//DTD Commons Validator Rules Configuration 1.3.0//EN" " http://jakarta.apache.org/commons/dtds/validator_1_3_0.dtd">

<form-validation>
  <formset>
    <form name="CheckMailForm">
        <!-- メールアドレスの検証をおこなっている。-->
        <field property="mailAddress" depends="required,email" >
          <msg name="email" key="error.mailAddress.email" />
          <msg name="required" key="error.mailAddress.required" />
        </field>
    </form>
  </formset>
</form-validation>